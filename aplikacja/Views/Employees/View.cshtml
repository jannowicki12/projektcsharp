@model aplikacja.Models.UpdateEmployeeViewModel
@{
    ViewData["Title"] = "View";
}
<h1>Add Employee</h1>
<form method="post" action="View" class="mt-5">
    <div class="form-group">
        <label for="">Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly>
    </div>
    <div class="form-group">
        <label for="">Name</label>
        <input type="text" class="form-control" asp-for="Name">
    </div>
    <div class="form-group">
        <label for="">Email</label>
        <input type="email" class="form-control" asp-for="Email">
    </div>
    <div class="form-group">
        <label for="">Salary</label>
        <input type="number" class="form-control" asp-for="Salary">
    </div>
    <div class="form-group">
        <label for="">Birth Date</label>
        <input type="date" class="form-control" asp-for="BirthDate">
    </div>
    <div class="form-group">
        <label for="">Position</label>
        <input type="number" class="form-control" asp-for="Position">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
    <button type="submit" class="btn btn-primary" asp-action="Delete" asp-controller="Employees">Delete</button>
</form>