@model aplikacja.Models.AddEmployeeViewModel
@{
}

<h1>Add Employee</h1>
<form method="post" action="Add" class="mt-5">
    <div class="form-group">
        <label for="">Name</label>
        <input type="text" class="form-control" asp-for="Name">
    </div>
    <div class="form-group">
        <label for="">Email</label>
        <input type="text" class="form-control" asp-for="Email">
    </div>
    <div class="form-group">
        <label for="">Salary</label>
        <input type="number" class="form-control" asp-for="Salary">
    </div>
    <div class="form-group">
        <label for="">Birth Date</label>
        <input type="date" class="form-control" asp-for="BirthDate">
    </div>
    <div class="form-group">
        <label for="">Position</label>
        <input type="number" class="form-control" asp-for="Position">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
